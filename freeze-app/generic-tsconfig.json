{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "out/tsc",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  }
}
